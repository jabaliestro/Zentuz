        <TextBox FontSize="30" Height="35" HorizontalAlignment="Left" Margin="90,12,0,0" Name="txTime" VerticalAlignment="Top" Width="44" />
        <TextBox FontSize="30" Height="35" HorizontalAlignment="Left" Margin="210,12,0,0" Name="txtLives" VerticalAlignment="Top" Width="78" />
        <Canvas Height="35" HorizontalAlignment="Left" Margin="142,53,0,0" Name="cnvAnimation" VerticalAlignment="Top" Width="146" />
    </Grid>
</UserControl>
